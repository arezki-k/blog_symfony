

{% extends 'base.html.twig' %}
{% block title %}{{article.title}}
{% endblock %}

{% block body %}

<!--Main layout-->
<main class="mt-5 pt-4">
  <div class="container dark-grey-text mt-5">
    <!--Grid row-->
    <div class="row wow fadeIn">
      <!--Grid column-->
      <div class="col-md-6 mb-4">
        <img src="{{ article.image }}" class="img-fluid" alt="" />
      </div>
      <!--Grid column-->

      <!--Grid column-->
      <div class="col-md-6 mb-4">
        <!--Content-->
        <div class="p-4">
          <div class="mb-3">
            <a href="">
              <span class="badge purple mr-1"
                >Cat√©gorie: {{ article.category }}</span
              >
            </a>
          </div>
          <p class="lead">
            <span class="lead font-weight-bold mr-1"> {{ article.title }} </span>
          </p>

          <p class="lead font-weight-bold">Description</p>

          <p>
            {{ article.content }}
          </p>

          <form class="d-flex justify-content-left">
            <!-- Default input -->
          </form>
        </div>
        <!--Content-->
      </div>
      <!--Grid column-->
    </div>
    <!--Grid row-->

    <hr />
  </div>
</main>
{% endblock %}
